{
    "cmake.cmakePath": "${workspaceFolder}/.mamba/Library/bin/cmake",
    "C_Cpp.clang_format_path": "${workspaceFolder}/.mamba/Library/bin/clang-format",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.renderWhitespace": "boundary",
    "lldb.dereferencePointers": true,
    "lldb.consoleMode": "commands",
    "lldb.displayFormat": "auto",
    "files.trimTrailingWhitespace": true,
    "search.useIgnoreFiles": false,
    "files.associations": {
        "*.ipp": "cpp",
        "__locale": "cpp",
        "xlocale": "cpp",
        "type_traits": "cpp",
        "chrono": "cpp",
        "format": "cpp",
        "thread": "cpp",
        "string": "cpp",
        "exception": "cpp",
        "xstring": "cpp",
        "array": "cpp",
        "system_error": "cpp",
        "stdexcept": "cpp"
    }
}
